
" Background color
set background=light

" Status line configuration
set laststatus=2
set statusline=%f\ LINE=%l\ COLUMN=%c

" Detect file type
filetype on

" Show line number
set nu

" Syntaxic coloration
syntax on
set showmatch
set hlsearch

" Indentation
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent

" Mouse mode
set mouse=n

" Use modeline
set modeline

" Key mapping
map n nzz
map N Nzz
